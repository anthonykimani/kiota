# ===========================================
# Kiota API Environment Configuration
# ===========================================
# Copy this file to .env.development or .env.production
# and fill in your own values
# 
# IMPORTANT: Never commit actual secrets to version control!
# ===========================================

# Service Config
SERVICE_NAME="Core Service"
NODE_ENV="development"
PORT=3003

# Application config
APPLICATION_NAME="Kiota Wealth"
APPLICATION_API_BASEURL="http://localhost:3003"
APPLICATION_API_KEY=""

# JWT Secret (REQUIRED - generate a random 256-bit key)
# Generate with: openssl rand -base64 32
JWT_SECRET="your-jwt-secret-change-in-production"

# Admin API Key (for Bull Board access in production)
ADMIN_API_KEY="your-admin-api-key-change-in-production"

# Database config
DB_HOST="localhost"
DB_PORT=5432
DB_NAME="kiota_postgres"
DB_USER="postgres"
DB_PASSWORD="your-database-password"
DB_SSL=0

# Privy config (get from https://console.privy.io)
PRIVY_APP_ID="your-privy-app-id"
PRIVY_APP_SECRET="your-privy-app-secret"

# OpenAI API Key (get from https://platform.openai.com)
OPENAI_API_KEY="your-openai-api-key"

# Redis config (for Bull queue system)
# Local development: redis://localhost:6379
# Production (Render/Railway): redis://:password@host:port
REDIS_URL="redis://localhost:6379"
REDIS_HOST="localhost"
REDIS_PORT=6379

# ===========================================
# Blockchain / Chain Configuration
# ===========================================
# CHAIN_NETWORK determines which network to use for deposits
# Options: 'base-sepolia' (testnet), 'base' (mainnet), 'ethereum-sepolia', 'ethereum'
CHAIN_NETWORK="base-sepolia"

# Confirmations required before crediting deposit
# Testnet default: 2, Mainnet default: 3
DEPOSIT_CONFIRMATIONS_REQUIRED=2

# RPC URLs (optional - will use public RPCs if not set)
# For production, use a dedicated RPC provider like Alchemy, Infura, or QuickNode
BASE_RPC_URL="https://sepolia.base.org"
BASE_SEPOLIA_RPC_URL="https://sepolia.base.org"
# BASE_RPC_URL="https://mainnet.base.org"  # Uncomment for mainnet

# USDC Address (optional - will use default for selected network if not set)
# Base Sepolia: 0x036CbD53842c5426634e7929541eC2318f3dCF7e
# Base Mainnet: 0x833589fCD6eDb6E08f4c7C32D4f71b54bdA02913
BASE_USDC_ADDRESS="0x036CbD53842c5426634e7929541eC2318f3dCF7e"

# Legacy Ethereum config (for swap providers)
NODE_URL="https://ethereum-sepolia-rpc.publicnode.com"

# 1inch Swap Configuration
# Get API key from https://portal.1inch.dev
ONEINCH_API_KEY="your-1inch-api-key"
ONEINCH_NETWORK="ethereum-sepolia"
ONEINCH_FUSION_ENABLED=false
ONEINCH_FUSION_SIGNER="privy"
SWAP_WALLET_PRIVATE_KEY=""
DEFAULT_SLIPPAGE_PERCENT=1.0
MAX_SLIPPAGE_PERCENT=3.0
